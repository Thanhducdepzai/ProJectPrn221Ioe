@page
@model DemoProject.Pages.Admin3Model
@{
    ViewData["Title"] = "Student Test Page";
}

<div class="test-page-container">
    <div class="header">
        <h2>Vòng tự luyện: 35</h2>
    </div>

    <div class="test-info">
        <label for="bai">Bài:</label>
        <input type="number" id="bai" name="bai" value="5" min="1" max="100">

        <label for="dangkibai">Dạng bài:</label>
        <select id="dangkibai" name="dangkibai">
            <option value="" disabled selected hidden></option>
            <!-- Add options here -->
        </select>

        <label for="thoigian">Thời gian (phút):</label>
        <input type="number" id="thoigian" name="thoigian" value="20" min="1" max="60">
    </div>

    <div class="user-info">
        <div class="user-details">
            <p>Nguyen Thanh Duc</p>
            <p>Role: ADMIN</p>
            <p>ID: 086945068</p>
        </div>
    </div>

    <div class="question-container">
        <table>
            <thead>
                <tr>
                    <th>Tiếng Việt</th>
                    <th></th>
                    <th>English</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 5; i++)
                {
                    <tr>
                        <td><input type="text" name="vietnamese@i" /></td>
                        <td class="equals-sign">=</td>
                        <td><input type="text" name="english@i" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <button class="create-button">Tạo đề</button>
        <button class="save-button">Lưu</button>
    </div>
</div>