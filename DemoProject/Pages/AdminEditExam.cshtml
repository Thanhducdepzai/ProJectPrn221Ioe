@page
@model DemoProject.Pages.AdminEditExamModel
@{
    ViewData["Title"] = "Edit Exam";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1, h2, h3, h4 {
        color: #007bff;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    input[type="text"], input[type="date"], select {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    select {
        background-color: #fff;
        -webkit-appearance: none;
        -moz-appearance: none;
    }

    div > div {
        margin-bottom: 20px;
    }

    .question-block {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

        .question-block label {
            display: inline-block;
            width: 100px;
        }

        .question-block input {
            display: inline-block;
            width: calc(100% - 110px);
        }
</style>
<h1>Edit Exam</h1>

<div>
    <form method="post">
        <div>
            <label>Round Name:</label>
            <input type="text" asp-for="RoundName" />
        </div>
        <div>
            <label>Round Create Date:</label>
            <input type="date" asp-for="RoundCreateDate" />
        </div>
        <p id="roundGradeDisplay">
            Khối lớp:
            <select id="GradeChoosingIdInput" asp-for="GradeChoosingId">
                <option value="">Chọn khối lớp</option>
                @foreach (var grade in Model.Grades)
                {
                    <option value="@grade.GradeId">@grade.GradeName</option>
                }
            </select>
        </p>
        <div>
            <h4>Part 1: Fill in the Blanks</h4>
            @for (int i = 0; i < Model.QuestionsPart1.Count; i++)
            {
                <div>
                    <input type="hidden" name="QuestionsPart1[@i].QuestionId" value="@Model.QuestionsPart1[i].QuestionId" />
                    <label>Question:</label>
                    <input type="text" name="QuestionsPart1[@i].Name" value="@Model.QuestionsPart1[i].Name" />
                    <label>Answer:</label>
                    <input type="text" name="QuestionsPart1[@i].Answer" value="@Model.QuestionsPart1[i].Answer" />
                </div>
            }
        </div>
        <div>
            <h4>Part 2: Multiple Choice</h4>
            @for (int i = 0; i < Model.QuestionsPart2.Count; i++)
            {
                <div>
                    <input type="hidden" name="QuestionsPart2[@i].QuestionId" value="@Model.QuestionsPart2[i].QuestionId" />
                    <label>Question:</label>
                    <input type="text" name="QuestionsPart2[@i].Name" value="@Model.QuestionsPart2[i].Name" />
                    <label>Choice 1:</label>
                    <input type="text" name="QuestionsPart2[@i].Choice1" value="@Model.QuestionsPart2[i].Choice1" />
                    <label>Choice 2:</label>
                    <input type="text" name="QuestionsPart2[@i].Choice2" value="@Model.QuestionsPart2[i].Choice2" />
                    <label>Choice 3:</label>
                    <input type="text" name="QuestionsPart2[@i].Choice3" value="@Model.QuestionsPart2[i].Choice3" />
                    <label>Choice 4:</label>
                    <input type="text" name="QuestionsPart2[@i].Choice4" value="@Model.QuestionsPart2[i].Choice4" />
                    <label>Correct:</label>
                    <input type="text" name="QuestionsPart2[@i].Answer" value="@Model.QuestionsPart2[i].Answer" />
                </div>
            }
        </div>

        <div>
            <h4>Part 3: Matching</h4>
            @for (int i = 0; i < Model.QuestionsPart3.Count; i++)
            {
                <div>
                    <input type="hidden" name="QuestionsPart3[@i].QuestionId" value="@Model.QuestionsPart3[i].QuestionId" />
                    <label>Question:</label>
                    <input type="text" name="QuestionsPart3[@i].Name" value="@Model.QuestionsPart3[i].Name" />
                    <label>Answer:</label>
                    <input type="text" name="QuestionsPart3[@i].Answer" value="@Model.QuestionsPart3[i].Answer" />
                </div>
            }
        </div>

        <div>
            <button type="submit">Save Changes</button>
        </div>
    </form>
</div>
