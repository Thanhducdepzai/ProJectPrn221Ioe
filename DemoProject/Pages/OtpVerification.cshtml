@page
@model DemoProject.Pages.OtpVerificationModel
@{
    ViewData["Title"] = "Verify OTP";
}
<section class="otp-verification">
    <div class="container">
        <div class="otp-content">
            <div class="otp-form">
                <h2 class="form-title">Xác Thực OTP</h2>
                <form method="post" class="otp-form" id="otp-form">
                    <div class="form-group">
                        <label for="otp">Nhập mã OTP</label>
                        <input type="text" id="otp" name="OtpCode" placeholder="Nhập mã OTP" required />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="verifyOtp" id="verifyOtp" class="form-submit" value="Xác Thực" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
