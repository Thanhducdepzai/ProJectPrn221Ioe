@page
@model ProjectIoePrn.Pages.StudentProfileModel
@{
    ViewData["Title"] = "Student Profile";
   
    var currentRound = ViewData["cr"] ;
}
<div class="btn-cpw">
    <a href="/ChangePassWord"><button>Đổi mật khẩu</button></a>
    
    </div>
<div class="profile-page-container">
    <div class="info-box">
        <h2>@Model.stu.StudentName </h2>
        <p>LỚP: @Model.stu.StudentClass</p>
        <p>TRƯỜNG: @Model.school.SchoolName</p>
        <p>XẾP HẠNG TỰ LUYỆN: Bạn thuộc top @ViewData["StudentRank"]</p>
        <p>XẾP HẠNG THI THỬ: Bạn chưa hoàn thành</p>
    </div>

    <!-- Ranking Info Box 1 -->
    <div class="ranking-info-box">
        <div class="ranking-info">
            <p>Top 50 tự luyện: Vòng @ViewData["cr"] - Khối Lớp 3</p>
            <p>Tuần 35 (6/5-12/5/2024)</p>
            <p>TRƯỜNG | QUẬN/HUYỆN | TỈNH THÀNH | QUỐC GIA</p>
            <p>THÁI BÌNH</p>
        </div>
    </div>

    <div class="search-container">
        <input type="text" placeholder="Tìm kiếm..." />
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>XẾP HẠNG</th>
                    <th>HỌC SINH</th>
                    <th>LỚP</th>
                    <th>TRƯỜNG</th>
                    <th>QUẬN/HUYỆN</th>
                    <th>ĐIỂM</th>
                   
                    <th>THỜI GIAN THI</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData["TopStudentsPart"] != null)
                {
                    var topStudentsPart = ViewData["TopStudentsPart"] as List<ProjectIoePrn.Pages.StudentProfileModel.StudentScoreViewModel>;
                    foreach (var student in topStudentsPart)
                    {
                        <tr>
                            <td>@student.Rank</td>
                            <td>@student.StudentName</td>
                            <td>@student.StudentClass</td>
                            <td>@student.SchoolName</td>
                            <td>@student.DistrictName</td>
                            <td>@student.Score</td>

                            <td>@student.TimeSpent</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="pagination">
            <span>1</span>
        </div>
    </div>

    <!-- Ranking Info Box 2 -->
    <div class="ranking-info-box">
        <div class="ranking-info">
            <p>Top 50 kỳ thi học kỳ 2023-2024: Vòng @ViewData["cr"] - Khối Lớp 3</p>
            <p>Tuần 35 (6/5-12/5/2024)</p>
            <p>TRƯỜNG | QUẬN/HUYỆN | TỈNH THÀNH | QUỐC GIA</p>
            <p>THÁI BÌNH</p>
        </div>
    </div>

    <div class="search-container">
        <input type="text" placeholder="Tìm kiếm..." />
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>XẾP HẠNG</th>
                    <th>HỌC SINH</th>
                    <th>LỚP</th>
                    <th>TRƯỜNG</th>
                    <th>QUẬN/HUYỆN</th>
                    <th>ĐIỂM</th>
                    
                    <th>THỜI GIAN THI</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData["TopStudents"] != null)
                {
                    var topStudents = ViewData["TopStudents"] as List<ProjectIoePrn.Pages.StudentProfileModel.StudentScoreViewModel>;
                    foreach (var student in topStudents)
                    {
                        <tr>
                            <td>@student.Rank</td>
                            <td>@student.StudentName</td>
                            <td>@student.StudentClass</td>
                            <td>@student.SchoolName</td>
                            <td>@student.DistrictName</td>
                            <td>@student.Score</td>
                            
                            <td>@student.TimeSpent</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="pagination">
            <span>1</span>
        </div>
    </div>
</div>

<style>
    .btn-cpw{
        margin-top: 50px; 

    
    }


</style>