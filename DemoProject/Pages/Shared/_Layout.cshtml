@{
    bool isHomePage = ViewData["IsHomePage"] != null ? (bool)ViewData["IsHomePage"] : false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Quiz App</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
</head>
<body>

    @if (isHomePage)
    {
        <!-- Header cho trang Index -->
        <header class="home-header">
            <img src="~/images/logo.png" alt="Logo" class="logo" />
            <nav class="right-nav">
                <a href="/TuLuyen">Tự luyện</a>
                <a href="/HocCungIDE">Học cùng IDE</a>
                <a asp-page="Login" class="login-link">Đăng nhập</a>
                <a asp-page="Register" class="register-link">Đăng ký</a>
            </nav>
        </header>
    }
    else
    {
        <!-- Header cho các trang khác -->
        <header class="other-header">
            <img src="~/images/logo.png" alt="Logo" class="logo" />
            <nav>
                <a href="/HocCungIDE">Học cùng IDE</a>
                <a href="/TuLuyen">Tự luyện</a>
                <a href="/ThongTinCaNhan">Thông tin cá nhân</a>
                <button class="logout-button">Thoát</button>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <span>IOE Việt Nam</span>
            <span>Trường đại học FPT Hà Nội</span>
            <span>SĐT:0808666888</span>
        </div>
    </footer>

    <script src="~/js/site.js"></script>

    <!-- Phần Scripts được render từ các trang con -->
    @RenderSection("Scripts", required: false)

</body>
</html>
